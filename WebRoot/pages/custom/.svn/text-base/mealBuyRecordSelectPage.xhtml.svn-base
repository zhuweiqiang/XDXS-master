<div class="tableCenter"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:t="http://myfaces.apache.org/tomahawk"
	xmlns:p="http://primefaces.org/ui" 
	xmlns:rw="http://www.qylm.com"
	xmlns:pe="http://primefaces.org/ui/extensions">
	<t:saveState value="#{mealBuyRecordSelectBean.mealBuyRecordSelectDto}" />
	<t:saveState value="#{mealBuyRecordSelectBean.mealBuyRecordList}" />
	<div class="searchRequirementNorth">
		<p:focus for="name" />
		<h:panelGrid id="selectGrid" columns="5">
			<h:outputLabel for="name" value="客户姓名" />
			<p:inputText styleClass="inputText" id="name" size="10" maxlength="20"
				value="#{mealBuyRecordSelectBean.mealBuyRecordSelectDto.name}" />
			<h:outputLabel for="temporaryActivityNames" value="套餐名称" />
			<p:inputText styleClass="inputText" id="temporaryActivityNames" size="10" maxlength="20"
				value="#{mealBuyRecordSelectBean.mealBuyRecordSelectDto.temporaryActivityName}" />
			<!--
			<h:outputLabel for="beginDate" value="赠送时间（开始）" />
			<p:calendar navigator="true" id="beginDate" size="16" maxlength="16"
				locale="tr" value="#{mealBuyRecordSelectBean.mealBuyRecordSelectDto.beginDate}"
				pattern="yyyy-MM-dd HH:mm"/>
			~
			<p:calendar navigator="true" id="endDate" size="16" maxlength="16"
				locale="tr" value="#{mealBuyRecordSelectBean.mealBuyRecordSelectDto.endDate}"
				pattern="yyyy-MM-dd HH:mm"/>
			-->
			<p:commandButton value="搜索" action="#{mealBuyRecordSelectBean.selectMealBuyRecord}" process=":form:selectGrid" 
				styleClass="searchBtn" accesskey="s" style="margin-left:30px;" ajax="false"/>
		</h:panelGrid>
	</div>
	<rw:paging pageBean="#{mealBuyRecordSelectBean}" />
	<div class="tableCenter">
		<p:dataTable emptyMessage="暂无数据" var="model" value="#{mealBuyRecordSelectBean.mealBuyRecordList}" rowIndexVar="rowIndex"
			widgetVar="viewTable" rowKey="#{model.id}" paginatorAlwaysVisible="true"
			sortBy="createDate" sortOrder="descending" id="viewTables">
			<f:facet name="header" >
				客户卡项查询信息列表
			</f:facet>
			<f:facet name="header" >
				套餐购买记录信息列表
			</f:facet>
			<p:column headerText="客户姓名" sortBy="#{model.customInfo.name}" width="80">
				<h:outputText value="#{model.customInfo.name}" />
			</p:column>
			<p:column headerText="卡项卡号" sortBy="#{model.customInfo.leaguerNumber}" width="120">
				<h:outputText value="#{model.customInfo.leaguerNumber}" />
			</p:column>
			<p:column headerText="活动套餐名" sortBy="#{model.temporaryActivity.name}">
				<h:outputText value="#{model.temporaryActivity.name}" />
			</p:column>
			<p:column headerText="套餐价格" sortBy="#{model.temporaryActivity.money}" width="120">
				<h:outputText value="#{model.temporaryActivity.money}￥" />
			</p:column>
			<p:column headerText="购买时间" sortBy="#{model.date}">
				<h:outputText value="#{model.date}" >
					<f:convertDateTime pattern="yyyy-MM-dd HH:mm"/>
				</h:outputText>
			</p:column>
		</p:dataTable>
	</div>
</div>